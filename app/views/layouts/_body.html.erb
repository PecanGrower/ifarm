<% if current_user %> 
  <div class="row-fluid">
    <div class="span2">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="span10">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
      <%= yield %>
    </div>
  </div>
<% else %>
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
  <% end %>
  <%= yield %>
<% end %>