<%= form_for @irrigation do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :field_id %>
  <%= f.collection_select :field_id, Field.all.sort_by(&:name_with_block), 
                                     :id, :name_with_block %>

  <%= f.label :time %>
  <%= f.text_field :time %>

  <%= f.submit "Save", class: "btn" %>

<% end %>