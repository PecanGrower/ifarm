<% provide :title, 'Irrigations' %>

<%= render 'form' %>

<h1>Current Irrigations</h1>

<table>
  <tr>
    <th>Field</th>
    <th>Last Irrigation</th>
    <th></th>
  </tr>

  <% @irrigations.each do |irrigation| %>
    <tr>
      <td><%= irrigation.field.name_with_block %></td>
      <td><%= irrigation.time.to_s(:long) %></td>
      <td><%= link_to 'edit', edit_irrigation_path(irrigation) %></td>
    </tr>
  <% end %>
</table>