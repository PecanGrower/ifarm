<%= form_for @farm, html: { class: 'form-inline' } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<div class="row">
  <div class="span3">
    <%= f.label :name, "Farm Name" %>
  </div>
  <div class="span3">  
    <%= f.label :weather_station_id, "Weather Station" %>
  </div>
</div>

  <%= f.text_field :name, class: 'input-medium', placeholder: 'Farm Name' %>

  <%= f.collection_select :weather_station_id,
                            WeatherStation.order("name"),
                            :id, :name %>
  <fieldset>
    <div class="row">
      <div class="span2">
        <%= f.label :irrigation_well_name, "Well Name" %>
      </div>
      <div class="span2">  
        <%= f.label :irrigation_well_pod_code, "POD Code" %>
      </div>
    </div>
    <%= f.fields_for :irrigation_wells do |builder| %>
      <%= render 'irrigation_well_fields', f: builder %>
    <% end %>

    <%= link_to_add_fields "Add Irrigation Well", f, :irrigation_wells %>
  </fieldset>
  <fieldset>
    <div class="row">
      <div class="span2">
        <%= f.label :block_name, "Block" %>
      </div>
      <div class="span1">  
        <%= f.label :field_name, "Field" %>
      </div>
      <div class="span3">  
        <%= f.label :soil_class_id, "Avail Water" %>
      </div>
    </div>
    <%= f.fields_for :blocks do |builder| %>
      <%= render 'block_fields', f: builder %>
    <% end %>

    <%= link_to_add_fields "Add Block", f, :blocks %><br />
  </fieldset>

  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>