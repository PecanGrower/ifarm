<% provide :title, "Next Irrigations" %>

<table>
  <tr>
    <th>Field</th>
    <th>Last irrigation</th>
    <th>Next irrigation</th>
  </tr>
  <% @report.each do |irrigation| %>
    <tr>
      <td><%= irrigation.field.name_with_block %></td>
      <td><%= irrigation.time.to_s(:long) %></td>
      <td><%= irrigation.next_irrigation.to_s(:long) %></td>
    </tr>
  <% end %>
</table>